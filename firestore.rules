rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own document, admins can read all
      allow read: if isOwner(userId) || isAdmin();

      // Users can update their own document (profile, etc.)
      allow update: if isOwner(userId) || isAdmin();

      // Only admins can create new user documents
      allow create: if isAdmin();

      // Only admins can delete user documents
      allow delete: if isAdmin();
    }

    // Bookings collection
    match /bookings/{bookingId} {
      // Users can read their own bookings, admins can read all
      allow read: if isAuthenticated() &&
        (resource.data.clientId == request.auth.uid || isAdmin());

      // Users can create bookings for themselves, admins can create any
      allow create: if isAuthenticated() &&
        (request.resource.data.clientId == request.auth.uid || isAdmin());

      // Users can update their own bookings, admins can update any
      allow update: if isAuthenticated() &&
        (resource.data.clientId == request.auth.uid || isAdmin());

      // Only admins can delete bookings
      allow delete: if isAdmin();
    }

    // Settings collection (admin only)
    match /settings/{document} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Any other collections - deny by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
